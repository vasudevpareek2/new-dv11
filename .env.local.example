# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME="Dolce Vita Pushkar"
NEXT_PUBLIC_SITE_DESCRIPTION="Luxury Villas in Pushkar, Rajasthan"

# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Google reCAPTCHA
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Contact Form
CONTACT_FORM_RECIPIENT=info@dolcevitapushkar.com
CONTACT_FORM_SUBJECT="New Contact Form Submission"

# Email Configuration (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM="Dolce Vita Pushkar <noreply@dolcevitapushkar.com>"

# Database (Prisma)
DATABASE_URL="postgresql://user:password@localhost:5432/dolce_vita?schema=public"

# Authentication (NextAuth.js)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key

# Social Login (OAuth)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret

# API Routes (for server-side usage only)
API_SECRET_KEY=your-api-secret-key

# Environment
NODE_ENV=development

# Development Flags
DEBUG=true

# Feature Flags
NEXT_PUBLIC_MAINTENANCE_MODE=false
NEXT_PUBLIC_BOOKING_ENABLED=true

# External Services
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token
WEATHER_API_KEY=your-weather-api-key

# Payment Gateway
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-secret-key

# CDN/Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-south-1
AWS_BUCKET_NAME=your-s3-bucket-name

# Analytics
PLAUSIBLE_DOMAIN=dolcevitapushkar.com

# Security Headers (CSP, etc.)
CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://*.google-analytics.com https://*.googletagmanager.com https://*.google.com https://*.gstatic.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: https:; font-src 'self' https://fonts.gstatic.com; connect-src 'self' https://*.google-analytics.com https://*.analytics.google.com https://*.googletagmanager.com;"

# CORS (if needed)
NEXT_PUBLIC_API_URL=https://your-production-domain.com/api

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  // 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  // Max requests per window per IP

# Cache Control
CACHE_CONTROL_MAX_AGE=31536000  // 1 year in seconds

# Image Optimization
NEXT_IMAGE_ALLOWED_DOMAINS=localhost,dolcevitapushkar.com,images.unsplash.com

# Performance
NEXT_TELEMETRY_DISABLED=1

# Deployment
VERCEL_URL=your-vercel-url.vercel.app
VERCEL_GIT_COMMIT_SHA=your-git-commit-sha

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Internal API Keys (for server-side use only, never expose to client)
INTERNAL_API_KEY=your-internal-api-key

# Note: Create a .env.local file and copy the contents of this file to it.
# Then replace the placeholder values with your actual configuration.
# DO NOT commit .env.local to version control.
